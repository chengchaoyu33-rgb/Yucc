# ============================================
# WMS-Lite 环境变量配置模板
# ============================================
# 使用说明：
# 1. 复制此文件为 .env: cp .env.example .env
# 2. 根据实际环境修改配置值
# 3. .env 文件包含敏感信息，请勿提交到版本控制

# ============================================
# 应用配置
# ============================================

# 运行环境: development | production
NODE_ENV=development

# 应用服务端口
PORT=3000

# 应用名称
APP_NAME=WMS-Lite

# ============================================
# 数据库配置 (MySQL)
# ============================================

# 数据库连接 URL
# 格式: mysql://用户名:密码@主机:端口/数据库名
DATABASE_URL=mysql://wms:wms123@localhost:3306/wms_lite

# 数据库主机
DB_HOST=localhost

# 数据库端口
DB_PORT=3306

# 数据库名称
DB_NAME=wms_lite

# 数据库用户名
DB_USER=wms

# 数据库密码
DB_PASSWORD=wms123

# 数据库连接池配置
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# JWT 认证配置
# ============================================

# JWT 密钥 (生产环境请修改为随机字符串)
JWT_SECRET=your-super-secret-key-change-in-production

# JWT 过期时间 (示例: 7d = 7天, 24h = 24小时)
JWT_EXPIRES_IN=7d

# ============================================
# 日志配置
# ============================================

# 日志级别: error | warn | info | debug
LOG_LEVEL=info

# 日志目录
LOG_DIR=./logs

# 日志文件最大大小 (MB)
LOG_MAX_SIZE=5

# 日志文件最大数量
LOG_MAX_FILES=5

# ============================================
# 文件上传配置
# ============================================

# 上传文件目录
UPLOAD_DIR=./uploads

# 最大文件大小 (字节) - 默认 10MB
MAX_FILE_SIZE=10485760

# 允许的文件类型
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.xlsx,.xls,.csv

# ============================================
# CORS 配置
# ============================================

# 允许的跨域来源 (生产环境请设置具体域名)
CORS_ORIGIN=*

# 允许的 HTTP 方法
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# 允许的请求头
CORS_HEADERS=Content-Type,Authorization

# ============================================
# 速率限制配置
# ============================================

# 时间窗口内最大请求数
RATE_LIMIT_MAX=100

# 时间窗口 (毫秒)
RATE_LIMIT_WINDOW=900000

# ============================================
# 打印配置
# ============================================

# 默认打印机名称
DEFAULT_PRINTER_NAME=Microsoft Print to PDF

# 打印服务类型: browser | lodop
PRINT_SERVICE_TYPE=browser

# ============================================
# 条码配置
# ============================================

# 条码生成服务 URL (可选，用于外部条码服务)
BARCODE_SERVICE_URL=

# 条码图片缓存目录
BARCODE_CACHE_DIR=./cache/barcode

# ============================================
# 邮件配置 (可选)
# ============================================

# SMTP 服务器地址
SMTP_HOST=smtp.gmail.com

# SMTP 端口
SMTP_PORT=587

# SMTP 用户名
SMTP_USER=your-email@gmail.com

# SMTP 密码
SMTP_PASS=your-app-password

# 发件人邮箱
SMTP_FROM=noreply@your-domain.com

# ============================================
# Redis 配置 (可选)
# ============================================

# Redis 连接 URL
REDIS_URL=redis://localhost:6379

# Redis 密码 (如果需要)
REDIS_PASSWORD=

# ============================================
# 系统配置
# ============================================

# 系统时区
TZ=Asia/Shanghai

# 系统语言
DEFAULT_LANGUAGE=zh-CN

# 单据编号前缀配置
ORDER_PREFIX_INBOUND=RK
ORDER_PREFIX_OUTBOUND=CK
ORDER_PREFIX_INVENTORY=PD
ORDER_PREFIX_MOVE=YK

# ============================================
# 安全配置
# ============================================

# 是否启用 HTTPS (生产环境建议启用)
ENABLE_HTTPS=false

# SSL 证书路径 (如果启用 HTTPS)
SSL_CERT_PATH=

# SSL 私钥路径 (如果启用 HTTPS)
SSL_KEY_PATH=

# 会话密钥
SESSION_SECRET=your-session-secret-key

# ============================================
# 监控配置 (可选)
# ============================================

# 是否启用 Prometheus 监控
ENABLE_METRICS=false

# Prometheus 监控端口
METRICS_PORT=9090

# ============================================
# 备份配置
# ============================================

# 备份目录
BACKUP_DIR=./backup

# 自动备份保留天数
BACKUP_RETENTION_DAYS=30

# ============================================
# 开发环境专用配置
# ============================================

# 是否启用热重载
ENABLE_HOT_RELOAD=true

# 是否启用调试模式
DEBUG=false

# 是否启用 Prisma Studio
ENABLE_PRISMA_STUDIO=true

# Prisma Studio 端口
PRISMA_STUDIO_PORT=5555

# ============================================
# Docker 环境专用配置
# ============================================

# 容器内数据目录
DATA_DIR=/app/data

# 容器内日志目录
LOGS_DIR=/app/logs

# 容器内上传目录
UPLOADS_DIR=/app/uploads
